# SUBFRACTURE LangGraph Platform Environment Configuration

# LangSmith Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=subfracture-production

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database Configuration (optional for advanced features)
DATABASE_URL=postgresql://user:password@localhost:5432/subfracture
REDIS_URL=redis://localhost:6379

# Weaviate Configuration (optional for semantic search)
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your_weaviate_api_key_here

# Neo4j Configuration (optional for knowledge graphs)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# SUBFRACTURE Configuration
SUBFRACTURE_LOG_LEVEL=INFO
SUBFRACTURE_ENABLE_COGNEE=false
SUBFRACTURE_MEMORY_RETENTION_DAYS=30
SUBFRACTURE_MAX_CONCURRENT_WORKFLOWS=10

# Performance Configuration
SUBFRACTURE_ASYNC_TIMEOUT=300
SUBFRACTURE_CIRCUIT_BREAKER_THRESHOLD=5
SUBFRACTURE_RETRY_ATTEMPTS=3